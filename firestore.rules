rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    match /coursesData/{courseData}/runners/{runner} {
      allow update: if request.auth != null && (request.auth.uid == resource.data.foreignKeys.userId || request.auth.token.admin == true);
    }
  }
}
