{
	"name": "sveltekit-todo-auth",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"dev:production": "vite dev --mode production",
		"dev-offline": "vite dev --mode dev-offline",
		"build": "vite build",
		"build:prod": "npm run migrate:prod && vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"migrations": "drizzle-kit generate:sqlite",
		"studio": "drizzle-kit studio",
		"migrate": "node scripts/migrate.js",
		"migrate:prod": "node scripts/migrate-prod.js"
	},
	"devDependencies": {
		"@iconify-json/carbon": "^1.1.17",
		"@sveltejs/adapter-cloudflare": "^2.3.1",
		"@sveltejs/enhanced-img": "^0.2.0",
		"@sveltejs/kit": "^1.22.3",
		"@unocss/extractor-svelte": "^0.52.4",
		"@unocss/preset-icons": "^0.52.4",
		"drizzle-kit": "^0.21.1",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^3.0.2",
		"svelte": "^4.1.1",
		"svelte-check": "^3.4.6",
		"sveltekit-superforms": "^1.5.1",
		"tslib": "^2.5.0",
		"typescript": "^5.0.4",
		"unocss": "^0.52.4",
		"vite": "^5.2.11",
		"wrangler": "^3.0.0"
	},
	"type": "module",
	"dependencies": {
		"@libsql/client": "^0.3.1",
		"@lucia-auth/adapter-sqlite": "^2.0.0",
		"@picocss/pico": "^2.0.6",
		"drizzle-orm": "^0.30.10",
		"linkedom": "^0.14.26",
		"lucia": "^2.0.0",
		"ol": "^7.5.2",
		"orienteering-js": "^0.0.29",
		"zod": "^3.21.4"
	}
}
