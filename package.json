{
  "name": "svelte-app",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --open",
    "test": "vitest",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "deploy:hosting": "npm run build && firebase deploy --only hosting",
    "deploy:firestore": "firebase deploy --only firestore:rules",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:all": "npm run deploy:firestore && npm run deploy:functions && npm run deploy:hosting",
    "deploy:dev": "firebase use dev && npm run copy-env:dev && npm run deploy:all",
    "deploy:prod": "firebase use prod && npm run copy-env:prod && npm run deploy:all && npm run copy-env:dev && firebase use dev",
    "copy-env:dev": "copy environments\\environment.dev.js environments\\environment.js",
    "copy-env:prod": "copy environments\\environment.prod.js environments\\environment.js"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^1.0.2",
    "@tsconfig/svelte": "^3.0.0",
    "@types/uuid": "^8.3.4",
    "jsdom": "^20.0.0",
    "svelte": "^3.49.0",
    "svelte-check": "^2.8.1",
    "svelte-preprocess": "^4.10.7",
    "tslib": "^2.4.0",
    "typescript": "^4.6.4",
    "vite": "^3.1.0",
    "vitest": "^0.23.4"
  },
  "dependencies": {
    "firebase": "^9.14.0",
    "mathjs": "^11.3.0",
    "svelte-spa-router": "^3.2.0",
    "uuid": "^9.0.0",
    "zod": "^3.19.1"
  }
}
