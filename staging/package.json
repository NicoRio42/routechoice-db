{
	"name": "web-client",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"deploy": "node deploy.js",
		"deploy:dev": "node deploy.js dev",
		"deploy:dev:hosting": "node deploy.js dev --only hosting",
		"deploy:staging": "node deploy.js staging",
		"deploy:staging:hosting": "node deploy.js staging --only hosting",
		"deploy:prod": "node deploy.js prod",
		"deploy:prod:hosting": "node deploy.js prod --only hosting",
		"deploy:prod:functions": "node deploy.js prod --only functions",
		"migrations": "drizzle-kit generate:sqlite",
		"migrate": "node migrate.js",
		"migrate:prod": "node migrate.js prod"
	},
	"devDependencies": {
		"@iconify-json/carbon": "^1.1.17",
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-cloudflare": "^2.3.0",
		"@sveltejs/kit": "^1.5.0",
		"@types/better-sqlite3": "^7.6.4",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"@unocss/extractor-svelte": "^0.52.5",
		"@unocss/preset-icons": "^0.52.5",
		"drizzle-kit": "^0.18.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"svelte": "^3.54.0",
		"svelte-check": "^3.0.1",
		"tslib": "^2.4.1",
		"typescript": "^4.9.3",
		"unocss": "^0.52.5",
		"vite": "^4.0.0",
		"vitest": "^0.25.3"
	},
	"type": "module",
	"dependencies": {
		"@lucia-auth/adapter-sqlite": "^1.1.1",
		"@lucia-auth/tokens": "^1.0.2",
		"better-sqlite3": "^8.4.0",
		"drizzle-orm": "^0.25.4",
		"lucia-auth": "^1.7.1",
		"mathjs": "^11.3.0",
		"ol": "^7.2.2",
		"orienteering-js": "^0.0.15",
		"sveltekit-superforms": "^0.8.6",
		"zod": "^3.21.4"
	}
}
